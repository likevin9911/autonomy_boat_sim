<?xml version="1.0" ?>

<launch>
  <!-- Arguments -->
  <arg name="scan_topic"     default="/wamv/sensors/lidars/lidar/scan"/>
  <arg name="initial_pose_x" default="0"/>
  <arg name="initial_pose_y" default="0"/>
  <arg name="initial_pose_a" default="-2.76"/>
  <arg name="initial_cov_xx" default="0.2" />
  <arg name="initial_cov_yy" default="0.2" />
  <arg name="initial_cov_yawyaw" default="1.0" />
  <arg name="use_nav_core_server" default="false" />
   



  <!-- AMCL -->
  <node pkg="amcl" type="amcl" name="amcl">

    <param name="min_particles"             value="500"/>
    <param name="max_particles"             value="5000"/>
    <param name="kld_err"                   value="0.01"/>
    <param name="update_min_d"              value="0.20"/>
    <param name="update_min_a"              value="0.50"/>
    <param name="resample_interval"         value="1"/>
    <param name="transform_tolerance"       value="0.1"/>
    <param name="recovery_alpha_slow"       value="0.00"/>
    <param name="recovery_alpha_fast"       value="0.00"/>
    <param name="initial_pose_x"            value="$(arg initial_pose_x)"/>
    <param name="initial_pose_y"            value="$(arg initial_pose_y)"/>
    <param name="initial_pose_a"            value="$(arg initial_pose_a)"/>
    <param name="/initial_cov_xx"           value="$(arg initial_cov_xx)" type="double" />
    <param name="/initial_cov_yy"           value="$(arg initial_cov_yy)" type="double" />
    <param name="/initial_cov_yawyaw"       value="$(arg initial_cov_yawyaw)" type="double" />
    <param name="gui_publish_rate"          value="50.0"/>
    

    <remap from="scan"                      to="$(arg scan_topic)"/>
    <param name="laser_max_range"           value="40"/>
    <param name="laser_max_beams"           value="30"/>
    <param name="laser_z_hit"               value="0.5"/>
    <param name="laser_z_short"             value="0.05"/>
    <param name="laser_z_max"               value="0.05"/>
    <param name="laser_z_rand"              value="0.5"/>
    <param name="laser_sigma_hit"           value="0.2"/>
    <param name="laser_lambda_short"        value="0.1"/>
    <param name="laser_likelihood_max_dist" value="2.0"/>
    <param name="laser_model_type"          value="likelihood_field"/>

    <param name="odom_model_type"           value="diff"/>
    <param name="odom_alpha1"               value="0.1"/>
    <param name="odom_alpha2"               value="0.1"/>
    <param name="odom_alpha3"               value="0.1"/>
    <param name="odom_alpha4"               value="0.1"/>
    <param name="odom_frame_id"             value="wamv/odom"/>
    <param name="base_frame_id"             value="wamv/base_link"/>
    <param name="global_frame_id"           value="map"/>
    <param name="use_map_topic"             value="true"/>
    <param name="save_pose_rate"            value="1.0"/>
  </node>
  

   
    <!-- tf -->
    <!-- <node name="world_to_map" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 world map 100" /> -->
    <!-- <node name="amcl_frame_to_base_link" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 amcl_frame $(arg base_link_frame) 100" /> -->
    <!-- <node name="base_link_to_laser" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 $(arg base_link_frame) $(arg laser_frame) 100" /> -->



  
</launch>
